<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

  <changeSet id="v1.0.1-default-admin" author="aqua-rush" context="default">
    <createTable tableName="admins">
      <column name="id" type="bigint" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="username" type="varchar(50)">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="password_hash" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <column name="real_name" type="varchar(100)"/>
      <column name="phone" type="varchar(20)"/>
      <column name="role" type="varchar(50)">
        <constraints nullable="false"/>
      </column>
      <column name="created_at" type="timestamp">
        <constraints nullable="false"/>
      </column>
      <column name="last_login_at" type="timestamp"/>
      <column name="updated_at" type="timestamp">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <!-- Insert default admin user -->
    <insert tableName="admins">
      <column name="id" valueComputed="true"/>
      <column name="username" value="admin"/>
      <column name="password_hash" value="加密后的密码"/>
      <column name="real_name" value="系统管理员"/>
      <column name="phone" value="13800138000"/>
      <column name="role" value="SUPER_ADMIN"/>
      <column name="created_at" valueComputed="true"/>
      <column name="last_login_at" valueComputed="true"/>
      <column name="updated_at" valueComputed="true"/>
    </insert>

    <!-- Create sequence for auto-increment -->
    <createSequence sequenceName="admins_id_seq" startValue="1" incrementBy="1" cycle="false"/>

  </changeSet>
</databaseChangeLog>
